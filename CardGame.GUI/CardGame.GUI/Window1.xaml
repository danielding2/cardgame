        <TextBox HorizontalAlignment="Left" Height="51" Margin="257,177,0,0" TextWrapping="Wrap" Text="Your Name" VerticalAlignment="Top" Width="302" TextAlignment="Center" Padding="0,15,0,0" TextChanged="TextBox_TextChanged"/>
